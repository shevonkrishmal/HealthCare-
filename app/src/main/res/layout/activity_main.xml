<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/s1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3D3ECF8"
    tools:context=".MainActivity">




        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="417dp"
            android:layout_height="163dp"
            android:background="@drawable/image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="318dp"
                android:layout_height="171dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="-1dp"
                android:layout_marginEnd="82dp"
                android:layout_marginBottom="1dp"
                android:contentDescription="@string/logo"
                app:srcCompat="@drawable/finnalogo" />

            <TextView
                android:id="@+id/te"
                android:layout_width="144dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="276dp"
                android:layout_marginTop="103dp"
                android:layout_marginEnd="-7dp"
                android:layout_marginBottom="20dp"
                android:text="@string/t1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp"
                android:textStyle="bold|italic" />

        </RelativeLayout>


        <EditText
            android:id="@+id/name"
            style="@style/Widget.Design.TextInputEditText"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintVertical_bias="0.234" />

        <ImageView
            android:id="@+id/doctor_image1"
            android:layout_width="144dp"
            android:layout_height="98dp"
            android:layout_marginStart="134dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="133dp"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/doctor_pic"
            app:layout_constraintBottom_toTopOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/p" />

        <EditText
            android:id="@+id/specialization"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/specialization"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.424"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintVertical_bias="0.323" />

        <EditText
            android:id="@+id/GMCnum"
            android:layout_width="311dp"
            android:layout_height="40dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="number"
            android:text="@string/gmc_reference_number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.42"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintVertical_bias="0.42000002" />

        <EditText
            android:id="@+id/NIC"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="number|textCapSentences"
            android:text="@string/nic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintVertical_bias="0.524" />

        <EditText
            android:id="@+id/Date_of_Birth"
            android:layout_width="313dp"
            android:layout_height="40dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="date"
            android:text="@string/date_of_birth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.438"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintVertical_bias="0.625" />

        <EditText
            android:id="@+id/mobile_num"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="54dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="phone"
            android:text="@string/mobile_number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.788" />

        <EditText
            android:id="@+id/email"
            android:layout_width="311dp"
            android:layout_height="40dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="57dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="@string/email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.86" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="382dp"
        android:background="#052A95"
        android:text="Register"
        android:textColor="#E3DDDD"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="312dp"
        android:layout_height="39dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="3dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="password"
        app:layout_constraintBottom_toTopOf="@+id/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

</androidx.constraintlayout.widget.ConstraintLayout>