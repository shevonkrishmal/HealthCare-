<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sr-scrollv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    tools:context=".Doctor_resultList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/srLocationsTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide12"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="40dp"
            android:text="DOCTORS..."
            android:textColor="#F1EEEE"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/speDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alike_angular"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#E8E3E3"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resultDoctorlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abx" />

</LinearLayout>